#include <iostream>
using namespace std;

int main() {
     int num;
    cout<<"enter a number of rows:";
    cin>>num;
    if(num>0){
   for (int i = num; i >=1; i--) {
      for (int j = i; j < 8; j++) {
         cout << " ";
      }
      for (int k = i; k >= 1; k--) {
         cout << char(k + 64);
      }
      for(int l = 2; 1 <= i; l++){
          cout<<char(l + 64);
      }
      cout<<endl;
      }
      for (int i = 2; i <= num; i++) {
      for (int j = i; j < 8; j++) {
         cout << " ";
      }
      for (int k = i; k >= 1; k--) {
         cout << char(k + 64);
      }
      for (int l = 2; l <= i; l++) {
         cout << char(l + 64);
      }
      cout<<endl;
   }
}
  return 0 ;
  }







